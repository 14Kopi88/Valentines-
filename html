<body>
    <h1 class="question">Will you be my Valentine?</h1>
    <div class="buttons">
        <button id="yes" onclick="growYes()">Yes ‚ù§Ô∏è</button>
        <button id="no" onclick="bounceNo()">No üíî</button>
    </div>
    <script>
        function growYes() {
            let yesBtn = document.getElementById("yes");
            let size = 20;
            let interval = setInterval(() => {
                size += 5;
                yesBtn.style.fontSize = size + "px";
                if (size >= 50) clearInterval(interval);
            }, 200);
        }

        function bounceNo() {
            let noBtn = document.getElementById("no");
            let position = 0;
            let direction = 1;
            let interval = setInterval(() => {
                position += direction * 10;
                noBtn.style.transform = `translateY(${position}px)`;
                if (position >= 30 || position <= -30) direction *= -1;
            }, 100);
            setTimeout(() => clearInterval(interval), 2000);
        }
    </script>
</body>
